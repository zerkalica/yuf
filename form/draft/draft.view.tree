$yuf_form_draft $mol_form_draft
	message_done @ \Saved
	done? false
	buttons /$mol_view
		<= Submit $mol_button_major
			title <= submit_title @ \Save
			hint <= submit_hint \
			click? <=> submit?
			enabled <= submit_allowed
		^ reset_content /
			<= Reset $mol_button_minor
				hint <= reset_title @ \Reset
				sub / <= Reset_icon $mol_icon_restore
				click? <=> reset?
				enabled <= changed
